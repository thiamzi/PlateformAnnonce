{% extends "layout/layout.html.twig" %}

{% block title %}
	Creation compte -
	{{ parent() }}
{% endblock %}

{% block corps_plat %}
	<div id="connexion" class="row" style="margin-right: 10%;">
		<fieldset class="col-sm-9 col-sm-offset-2">
			<legend>
				<h2>{% trans %}Creer un compte{% endtrans %}</h2>
			</legend>
			<div class="col-sm-8 col-sm-offset-2">
				{{ form_start(form , {'method': 'POST'}) }}
				<div class="form-group">
					<label for="username">{% trans %}Nom{% endtrans %}</label>
					{{ form_widget(form.username) }}
				</div>
				<div class="form-error" id="err">
					{{ form_errors(form.username) }}
				</div>
				<div class="form-group">
					<label for="email">{% trans %}Adresse Email{% endtrans %}</label>
					{{ form_widget(form.email) }}
				</div>
				<div class="form-error" id="err">
					{{ form_errors(form.email) }}
				</div>
				<div class="form-group">
					<label for="password">{% trans %}Mot de passe{% endtrans %}</label>
					{{ form_widget(form.password.first)}}
				</div>
				<div class="form-error" id="err">
					{{ form_errors(form.password.first) }}
				</div>
				<div class="form-error" id="err">
					{{ form_errors(form.password) }}
				</div>
				<div class="form-group">
					<label for="password">{% trans %}Confiemr mot de passe{% endtrans %}</label>
					{{ form_widget(form.password.second) }}
				</div>
				<button id="btc" class="btn btn-default">valider</button>
				{{ form_end(form) }}
			</div>
		</fieldset>
	</div>
{% endblock %}
