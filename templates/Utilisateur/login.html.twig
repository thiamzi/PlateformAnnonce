{% extends "layout/layout.html.twig"%}

{% block body %}
{% for message in app.flashes('info') %}
    <div style="text-align : center; margin-bottom  : 10px;font-size : 20px;
     background : green ; color : white  ; border-radius : 7px 7px 7px 7px ; " class="flash-success">
       {{ message }}
    </div>
{% endfor %}
<div class="row" >
    <div class="col-sm-8 col-sm-offset-2" >
      <h2>Se connecter</h2>
  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-danger">{{ 'email ou mot de passe incorrect'|trans}}</div>
  {% endif %}

  {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
    <form action="{{ path('login_check') }}" method="post">
        <div class="form-group">
            <label for="email">{% trans %}Adresse mail{% endtrans %}</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
        </div>

        <div class="form-group">
            <label for="password">{% trans %}Mot de passe{% endtrans %}</label>
            <input type="password" id="password" class="form-control" name="_password"/>
        </div>
            <input type="submit" class="btn btn-primary" value="Connexion" />
        </form>
        <br/>
        <div> <p><a href="{{ path('register') }}">{% trans %}Mot de passe oublie{% endtrans %}</a><p></div>
        <div> <p>Pas de compte? <a href="{{ path('register') }}">{% trans %}Creer un compte{% endtrans %}</a><p></div>
    </div>
</div>
{% endblock %}
