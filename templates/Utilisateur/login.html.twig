{% extends "layout/layout.html.twig"%}

{% block body %}
	{% for message in app.flashes('info') %}
		<div id="cree" class="flash-success">
			{{ message }}
		</div>
	{% endfor %}

	<div id="connexion" class="row" style="margin-right: 10%;">
		<fieldset class="col-sm-9 col-sm-offset-2">
			<legend>
				<h2>Se connecter</h2>
			</legend>
			<div class="col-sm-8 col-sm-offset-2">
				{% if error %}
					<div class="alert alert-danger">{{ 'email ou mot de passe incorrect'|trans}}</div>
				{% endif %}
				<form action="{{ path('login_check') }}" method="post">
					<div class="form-group">
						<label for="email">{% trans %}Adresse mail{% endtrans %}</label>
						<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
					</div>
					<div class="form-group">
						<label for="password">{% trans %}Mot de passe{% endtrans %}</label>
						<input type="password" id="password" class="form-control" name="_password"/>
					</div>
					<button id="btc" class="btn btn-default">connexion</button>
				</form>
				<div>
					<p>
						<a href="{{ path('register') }}">{% trans %}Mot de passe oublie{% endtrans %}</a>
					</p>
					<p></p>
				</div>
				<div>
					<p>Pas de compte?
						<a href="{{ path('register') }}">{% trans %}Creer un compte{% endtrans %}</a>
					</p>
					<p></p>
				</div>
			</div>
		</fieldset>
	</div>


{% endblock %}
